<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="edu.msudenver.cs3013.project1_s24.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/nav_home_to_content"
            app:destination="@id/nav_content"
            app:popUpTo="@id/nav_home" />
    </fragment>


    <fragment
        android:id="@+id/nav_content"
        android:name="edu.msudenver.cs3013.project1_s24.ContentFragment"
        android:label="@string/content"
        tools:layout="@layout/fragment_content" >
        <action
            android:id="@+id/nav_content_to_history"
            app:destination="@id/nav_history"
            app:popUpTo="@id/nav_content" />
        <action
            android:id="@+id/nav_content_to_geography"
            app:destination="@id/nav_geography"
            app:popUpTo="@id/nav_content" />
    </fragment>

    <fragment
        android:id="@+id/nav_recent"
        android:name="edu.msudenver.cs3013.project1_s24.RecentFragment"
        android:label="@string/recent"
        tools:layout="@layout/fragment_recent" />

    <fragment
        android:id="@+id/nav_history"
        android:name="edu.msudenver.cs3013.project1_s24.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history" >
    <action
        android:id="@+id/nav_history_to_1800"
        app:destination="@id/nav_history1800"
        app:popUpTo="@id/nav_content" />
    </fragment>

    <fragment
        android:id="@+id/nav_history1800"
        android:name="edu.msudenver.cs3013.project1_s24.History1800"
        android:label="@string/history"
        tools:layout="@layout/fragment_history_1800" />



    <fragment
        android:id="@+id/nav_archive"
        android:name="edu.msudenver.cs3013.project1_s24.ArchiveFragment"
        android:label="@string/archive"
        tools:layout="@layout/fragment_archive" />

    <fragment
        android:id="@+id/nav_bin"
        android:name="edu.msudenver.cs3013.project1_s24.BinFragment"
        android:label="@string/bin"
        tools:layout="@layout/fragment_bin" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="edu.msudenver.cs3013.project1_s24.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/nav_geography"
        android:name="edu.msudenver.cs3013.project1_s24.GeographyFragment"
        android:label="@string/geography"
        tools:layout="@layout/fragment_geography" />
</navigation>